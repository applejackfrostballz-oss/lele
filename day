<body>
    <div class="container">
        <header>
            <div class="decoration left"><i class="fas fa-heart"></i></div>
            <h1>纪念日天数记录</h1>
            <p class="subtitle">记录从特殊日子开始已经走过的每一天，珍藏每一份回忆</p>
            <div class="decoration right"><i class="fas fa-calendar-alt"></i></div>
        </header>
        
        <div class="main-content">
            <div class="left-panel">
                <h2 class="form-title"><i class="fas fa-plus-circle"></i> 添加新的纪念日</h2>
                <form id="milestoneForm">
                    <div class="form-group">
                        <label for="title"><i class="fas fa-heading"></i> 纪念日名称</label>
                        <input type="text" id="title" placeholder="例如：我们在一起的日子" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="date"><i class="fas fa-calendar-day"></i> 开始日期</label>
                        <input type="date" id="date" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="description"><i class="fas fa-sticky-note"></i> 描述（可选）</label>
                        <textarea id="description" rows="3" placeholder="关于这个纪念日的描述..."></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="color">
                            <i class="fas fa-palette"></i> 卡片颜色
                            <select id="color">
                                <option value="#e67e22">橙色（默认）</option>
                                <option value="#3498db">蓝色</option>
                                <option value="#2ecc71">绿色</option>
                                <option value="#9b59b6">紫色</option>
                                <option value="#e74c3c">红色</option>
                            </select>
                        </label>
                    </div>
                    
                    <button type="submit" class="btn"><i class="fas fa-save"></i> 添加纪念日</button>
                </form>
                
                <div class="current-date">
                    <i class="fas fa-clock"></i> 当前日期：<span id="currentDate"></span>
                </div>
            </div>
            
            <div class="right-panel">
                <h2 class="form-title"><i class="fas fa-history"></i> 我的纪念日</h2>
                
                <div id="milestoneList">
                    <!-- 这里会动态添加纪念日卡片 -->
                    <div class="empty-state" id="emptyState">
                        <i class="fas fa-heart"></i>
                        <h3>还没有添加纪念日</h3>
                        <p>添加第一个纪念日，开始记录美好时光</p>
                    </div>
                </div>
            </div>
        </div>
        
        <footer>
            <p>© 2023 纪念日天数记录器 | 记录每一个重要的日子</p>
            <p>所有纪念日数据保存在本地浏览器中</p>
        </footer>
    </div>

    <script>
        // 初始化 - 设置默认日期为2022-12-08
        document.addEventListener('DOMContentLoaded', function() {
            // 设置当前日期显示
            const now = new Date();
            const currentDateElement = document.getElementById('currentDate');
            currentDateElement.textContent = now.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                weekday: 'long'
            });
            
            // 设置默认日期为2022年12月8日
            document.getElementById('date').value = '2022-12-08';
            
            // 从本地存储加载纪念日
            loadMilestones();
            
            // 添加表单提交事件
            document.getElementById('milestoneForm').addEventListener('submit', addMilestone);
        });
        
        // 计算已过去的天数
        function calculateDays(startDate) {
            const start = new Date(startDate);
            const now = new Date();
            
            // 重置时间为午夜，确保只计算完整的天数
            start.setHours(0, 0, 0, 0);
            now.setHours(0, 0, 0, 0);
            
            // 计算天数差
            const timeDiff = now.getTime() - start.getTime();
            const daysDiff = Math.floor(timeDiff / (1000 * 3600 * 24));
            
            return daysDiff;
        }
        
        // 添加纪念日
        function addMilestone(e) {
            e.preventDefault();
            
            const title = document.getElementById('title').value;
            const date = document.getElementById('date').value;
            const description = document.getElementById('description').value;
            const color = document.getElementById('color').value;
            
            // 计算已过去的天数
            const daysPassed = calculateDays(date);
            
            // 创建纪念日对象
            const milestone = {
                id: Date.now(),
                title: title,
                date: date,
                description: description,
                color: color,
                daysPassed: daysPassed,
                createdAt: new Date().toISOString()
            };
            
            // 保存到本地存储
            saveMilestone(milestone);
            
            // 添加到页面
            addMilestoneToPage(milestone);
            
            // 重置表单
            document.getElementById('milestoneForm').reset();
            // 重置默认日期
            document.getElementById('date').value = '2022-12-08';
            
            // 隐藏空状态提示
            document.getElementById('emptyState').style.display = 'none';
        }
        
        // 保存纪念日到本地存储
        function saveMilestone(milestone) {
            let milestones = JSON.parse(localStorage.getItem('milestones')) || [];
            milestones.push(milestone);
            localStorage.setItem('milestones', JSON.stringify(milestones));
        }
        
        // 从本地存储加载纪念日
        function loadMilestones() {
            const milestones = JSON.parse(localStorage.getItem('milestones')) || [];
            
            if (milestones.length === 0) {
                // 如果没有纪念日，显示空状态
                document.getElementById('emptyState').style.display = 'block';
                return;
            }
            
            // 隐藏空状态提示
            document.getElementById('emptyState').style.display = 'none';
            
            // 按创建日期排序（最新的在前）
            milestones.sort((a, b) => b.id - a.id);
            
            // 添加到页面
            milestones.forEach(milestone => {
                // 更新天数（因为距离上次打开可能已经过去了更多天数）
                milestone.daysPassed = calculateDays(milestone.date);
                addMilestoneToPage(milestone);
            });
        }
        
        // 将纪念日添加到页面
        function addMilestoneToPage(milestone) {
            const milestoneList = document.getElementById('milestoneList');
            
            // 创建纪念日卡片
            const card = document.createElement('div');
            card.className = 'milestone-card';
            card.dataset.id = milestone.id;
            card.style.borderLeftColor = milestone.color;
            
            // 格式化日期
            const dateObj = new Date(milestone.date);
            const formattedDate = dateObj.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            
            // 根据天数选择不同的图标
            let icon = 'fas fa-heart';
            if (milestone.daysPassed > 365) {
                icon = 'fas fa-gem'; // 一年以上
            } else if (milestone.daysPassed > 100) {
                icon = 'fas fa-star'; // 100天以上
            }
            
            card.innerHTML = `
                <button class="delete-btn" onclick="deleteMilestone(${milestone.id})">
                    <i class="fas fa-times"></i>
                </button>
                <div class="days-container">
                    <div class="days">${milestone.daysPassed}</div>
                    <div class="days-label">已经过去的天数</div>
                </div>
                <h3 class="title"><i class="${icon}"></i> ${milestone.title}</h3>
                <p class="date"><i class="fas fa-calendar"></i> 开始于：${formattedDate}</p>
                ${milestone.description ? `<p class="description">${milestone.description}</p>` : ''}
            `;
            
            // 将新卡片插入到空状态提示之前
            const emptyState = document.getElementById('emptyState');
            if (emptyState.style.display !== 'none') {
                milestoneList.insertBefore(card, emptyState);
            } else {
                milestoneList.insertBefore(card, milestoneList.firstChild);
            }
        }
        
        // 删除纪念日
        function deleteMilestone(id) {
            if (!confirm('确定要删除这个纪念日吗？')) {
                return;
            }
            
            // 从本地存储中删除
            let milestones = JSON.parse(localStorage.getItem('milestones')) || [];
            milestones = milestones.filter(milestone => milestone.id !== id);
            localStorage.setItem('milestones', JSON.stringify(milestones));
            
            // 从页面中删除
            const card = document.querySelector(`.milestone-card[data-id="${id}"]`);
            if (card) {
                card.remove();
            }
            
            // 如果没有纪念日了，显示空状态
            milestones = JSON.parse(localStorage.getItem('milestones')) || [];
            if (milestones.length === 0) {
                document.getElementById('emptyState').style.display = 'block';
            }
        }
        
        // 每秒更新当前日期显示
        setInterval(() => {
            const now = new Date();
            const currentDateElement = document.getElementById('currentDate');
            currentDateElement.textContent = now.toLocaleDateString('zh-CN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                weekday: 'long'
            }) + ' ' + now.toLocaleTimeString('zh-CN');
            
            // 每10分钟更新一次纪念日天数（避免频繁更新）
            const minutes = now.getMinutes();
            if (minutes % 10 === 0 && now.getSeconds() === 0) {
                updateAllMilestonesDays();
            }
        }, 1000);
        
        // 更新所有纪念日的天数
        function updateAllMilestonesDays() {
            const milestones = JSON.parse(localStorage.getItem('milestones')) || [];
            
            milestones.forEach(milestone => {
                // 更新天数
                milestone.daysPassed = calculateDays(milestone.date);
                
                // 更新页面显示
                const card = document.querySelector(`.milestone-card[data-id="${milestone.id}"]`);
                if (card) {
                    const daysElement = card.querySelector('.days');
                    if (daysElement) {
                        daysElement.textContent = milestone.daysPassed;
                    }
                }
            });
            
            // 保存更新后的数据
            localStorage.setItem('milestones', JSON.stringify(milestones));
        }
    </script>
</body>
</html>
